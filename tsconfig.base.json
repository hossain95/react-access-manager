{
  "compilerOptions": {
    "target": "ES2016",
    "module": "CommonJS",
    "declaration": true,
    "strict": true,
    "jsx": "react",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "react-secure-access/*": ["packages/react-secure-access/src/*"],
      "react-secure-permission/*": ["packages/react-secure-permission/src/*"],
      "react-secure-auth/*": ["packages/react-secure-auth/src/*"]
    }
  },
  "exclude": ["node_modules", "dist", "examples", "docs"]
}
