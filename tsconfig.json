{
    "compilerOptions": {
        "target": "es2020",
        "module": "esnext",
        "lib": ["dom", "ESNext"],
        "jsx": "react-jsx",
        "types": ["jest", "@testing-library/jest-dom"],

        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noImplicitAny": true,
        "baseUrl": ".",
        "paths": {
            "react-access-manager/*": ["packages/react-access-manager/src/*"],
            "react-permission/*": ["packages/react-permission/src/*"],
            "react-auth/*": ["packages/react-auth/src/*"]
        }
    },
    "include": [
        "packages/*/src/**/*",
        "scripts/*.js",
        "packages/react-permission/jest.setup.ts"
    ],
    "exclude": ["node_modules", "dist"]
}
